<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/input_pannel_plus_text_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="@dimen/input_pannel_plus_icon_size"
        android:layout_height="@dimen/input_pannel_plus_icon_size"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_pannel_plus_text_margin"
        android:gravity="center"
        android:textSize="@dimen/input_pannel_plus_text_size" />
</LinearLayout>